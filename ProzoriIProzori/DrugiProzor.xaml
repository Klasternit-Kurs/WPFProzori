<Window x:Class="ProzoriIProzori.DrugiProzor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProzoriIProzori"
        mc:Ignorable="d"
        Title="DrugiProzor" Height="450" Width="800" WindowStyle="None">
	<UniformGrid Columns="2">
	    <Label FontSize="24" Content="Ime: "/>
		<TextBox Text="{Binding Ime, UpdateSourceTrigger=Explicit}" FontSize="24"/>
		<Label FontSize="24" Content="Prezime: "/>
		<TextBox Text="{Binding Prezime, UpdateSourceTrigger=Explicit}" FontSize="24"/>
		<Button FontSize="24" Click="Otkazi">Otkazi</Button>
		<Button FontSize="24" Content="OK" Click="OK"/>
	</UniformGrid>
</Window>
